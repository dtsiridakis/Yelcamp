<% include ../partials/header %>

    <div class="row text-center">
        <h1>Create a new campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
               <div class="form-group">
                    <input class="form-control" type="number" placeholder="cost" name="cost" min="0.00" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Put your location generally">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
        
        <a href="/campgrounds">Go back</a>
    </div>

<% include ../partials/footer %>